<%= simple_form_for(@team, :html => {:'data-ajax' => 'false'}) do |f| %>
  <%= f.error_notification %>
  <%= render 'layouts/error_messages', object: f.object %>

<!--
  <div class="form-inputs">
    <%#= f.input :name %>
    <%#= f.input :active %>
    <%#= f.input :url %>
    <%#= f.input :twitter %>
    <%#= f.input :gender %>
    <%#= f.input :varsity %>
    <%#= f.input :season %>
    <%#= f.input :sport_id %>
  </div>

  <div class="form-actions">
    <%#= f.button :submit %>
  </div>
-->
  <div class="field">
    <%= f.label :sport_id %>
    <%= f.collection_select :sport_id, Sport.order(:name).all, :id, :name,  {include_blank: true} %>
  </div>
<div class="ui-grid-a">
  <div class="ui-block-a">
    <div class="field">
      <%= f.label :varsity, "Type" %>
      <fieldset data-role="controlgroup" data-type="horizontal">
        <%= f.radio_button :varsity, true %>
        <%= f.label :varsity, 'Varsity', :value => true %>
        <%= f.radio_button :varsity, false %>
        <%= f.label :varsity, 'JV', :value => false %>
      </fieldset>
    </div>
  </div>
  <div class="ui-block-b">
    <div class="field">
      <%= f.label :gender, "Gender" %>
      <fieldset data-role="controlgroup" data-type="horizontal">
        <%= f.radio_button :gender, 'men' %>
        <%= f.label :gender, 'Men', :value => 'men' %>
        <%= f.radio_button :gender, 'women' %>
        <%= f.label :gender, 'Women', :value => 'women' %>
        <%= f.radio_button :gender, 'co-ed' %>
        <%= f.label :gender, 'Co-Ed', :value => 'co-ed' %>
      </fieldset>
    </div>
  </div>
  <div class="ui-block-a">
  <div class="field">
    <%= f.label :suffix, "Team Name Suffix" %>
    <fieldset data-role="controlgroup" data-type="horizontal">
      <%= f.radio_button :suffix, '' %>
      <%= f.label :suffix, 'None', :value => '' %>
      <%= f.radio_button :suffix, 'a' %>
      <%= f.label :suffix, 'A', :value => 'a' %>
      <%= f.radio_button :suffix, 'b' %>
      <%= f.label :suffix, 'B', :value => 'b' %>
      <%= f.radio_button :suffix, 'c' %>
      <%= f.label :suffix, 'C', :value => 'c' %>
    </fieldset>
  </div>
  </div>
  <div class="ui-block-b">
  <div class="field">
    <br />
    <%= f.label :showgender, "Show Gender in Team Name" %>
    <%= f.check_box :showgender %>
  </div>
  </div>
</div>
  <div class="field">
    <%= f.label :season, "Season" %>
    <fieldset data-role="controlgroup" data-type="vertical">
      <%= f.radio_button :season, 'fall' %>
      <%= f.label :season, 'Fall', :value => 'fall' %>
      <%= f.radio_button :season, 'winter' %>
      <%= f.label :season, 'Winter', :value => 'winter' %>
      <%= f.radio_button :season, 'spring' %>
      <%= f.label :season, 'Spring', :value => 'spring' %>
    </fieldset>
  </div>
  <div class="field">
    <%= f.label :url, "Team Web Site" %>
    <%= f.text_field :url, :type => "url" %>
  </div>
  <div class="field">
    <%= f.label :teampicurl, "Team Picture URL" %>
    <%= f.text_field :teampicurl, :type => "url" %>
  </div>
  <div class="field">
    <%= f.label :twitter, "Team Twitter Handle" %>
    <%= f.text_field :twitter %>
  </div>
  <div class="field">
    <%= f.label :active %>
    <%= f.check_box :active %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
