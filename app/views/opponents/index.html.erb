<h1>Listing opponents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Mascot</th>
      <th>Homevenue</th>
      <th>Conferenceopponent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opponents.each do |opponent| %>
      <tr>
        <td><%= opponent.name %></td>
        <td><%= opponent.mascot %></td>
        <td><%= opponent.homevenue %></td>
        <td><%= opponent.conferenceopponent %></td>
        <td><%= link_to 'Show', opponent %></td>
        <td><%= link_to 'Edit', edit_opponent_path(opponent) %></td>
        <td><%= link_to 'Destroy', opponent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opponent', new_opponent_path %>

<h3 class="ui-bar ui-bar-a ui-corner-all">Opponents</h3>
<ul data-role="listview" data-inset="true" data-autodividers="true" data-filter="true">
  <% @opponents.each do |opponent| %>
    <li><%= link_to opponent.name + " " + opponent.mascot, opponent %></li>
  <% end %>
</ul>

