<h3 class="ui-bar ui-bar-a ui-corner-none">Change Your Password</h3>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, :html => {:'data-ajax' => 'false'}) do |f| %>
  <%= f.error_notification %>
  <%= render 'layouts/error_messages', object: f.object %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "New password", required: true, autofocus: true %>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change My Password", :'data-icon' => "user" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
