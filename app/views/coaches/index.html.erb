<h3 class="ui-bar ui-bar-b ui-corner-all">Coaches</h3>

    
<ul data-role="listview" data-inset="true" data-filter="true" data-autodividers="true">
  <% @coaches.each do |coach| %>
    <li><%= link_to coach.lastcommafirst, coach %></li>
  <% end %>
  <%#= content_tag(:li, fa_icon("check", text: "Bulleted list item")) %>
</ul>   
      
<h3 class="ui-bar ui-bar-b ui-corner-all">Coach Administration</h3>
    
<div data-role="collapsible-set" data-autodividers="true" data-mini="true">
    <% @coaches.each do |coach| %>
<div data-role="collapsible" data-collapsed="true" data-iconpos="right">
  <h2><%= h coach.lastcommafirst %></h2> 
         <%= link_to 'Edit', edit_coach_path(coach), :'data-role' => 'button', :'data-icon' => 'edit', :'data-inline' => "true", :'data-mini' => "true" %>
         <%= link_to 'Delete', coach, :'data-role' => 'button', :'data-icon' => 'delete', :'data-inline' => "true", method: :delete, data: { confirm: 'Are you sure?' }, :'data-mini' => "true" %>
</div>
    <% end %>
</div>
    
<div data-role="control-group" data-type="horizontal">
  <%= link_to 'New Coach', new_coach_path, :'data-role' => 'button', :'data-icon' => 'plus', :'data-inline' => "true" %>
</div>
