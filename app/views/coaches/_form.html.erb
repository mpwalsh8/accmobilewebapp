  <div data-role="fieldcontain" class="field">
    <%= f.label :firstname, "First Name" %><br>
    <%= f.text_field :firstname %>
  </div>
  <div data-role="fieldcontain" class="field">
    <%= f.label :middlename, "Middle Name" %><br>
    <%= f.text_field :middlename %>
  </div>
  <div data-role="fieldcontain" class="field">
    <%= f.label :lastname, "Last Name" %><br>
    <%= f.text_field :lastname %>
  </div>
  <div data-role="fieldcontain" class="field">
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname %>
  </div>
  <div data-role="fieldcontain" class="field">
    <%= f.label :active, "Active Coach" %><br>
    <%= f.check_box :active %>
  </div>
