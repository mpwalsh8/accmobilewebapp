    <%= f.label :phone, "Phone" %><br>
    <%= f.text_field :phone %>
  </div>
  <div data-role="fieldcontain" class="field">
    <%= f.label :twitter, "Twitter Username" %><br>
    <%= f.text_field :twitter %>
  </div>
  <div data-role="fieldcontain" class="actions">
    <%= f.submit %>
  </div>

<% end %>
